# 4k 모니터라 글자가 너무 작은경우
Xft.dpi: 192
xrdb -merge ~/.Xresources

# 키 입력 속도 변경 적용
systemctl --user daemon-reload
systemctl --user enable --now keyboard-rate.service
systemctl --user start --now keyboard-rate.service

# 라즈베리파이 초기화 스크립트 실행 방법
./run-remote-rasp-init.sh rasp-private /tmp/rasp-init
sudo systemctl disable --now systemd-networkd-wait-online.service
sudo systemctl enable --now NetworkManager-wait-online.service
reboot 필요

# git-prompt를 설치해야지 쉘에 깃 정보를 표시할 수 있다.

# docker 데이터 위치를 변경하고 싶다면 /etc/docker/daemon.json에서
{
  "data-root": "/mnt/docker-data"
}
# 이런식으로 설정하면 된다.